<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>List of users</title>
</head>

<body>
    <div class="container">
        <div class="mt-3 ml-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col">Actionsf</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < users.length; i++) { %>
                        <tr>
                            <td>
                                <%= users[i].firstName +' '+ users[i].lastName%>
                            </td>
                            <td>
                                <%= users[i].address %>
                            </td>
                            <td>
                                <%= users[i].email %>
                            </td>
                            <td>
                                <%= users[i].roleId== ' 1'?'Admin':(users[i].roleId=='0' ?'Doctor':'Paitent') %>
                            </td>
                            <td>
                                <a href="/update?id=<%=users[i].id%>" class="btn btn-primary btn-sm active"
                                    role="button" aria-pressed="true">Update</a>
                                <a href="#" class="btn btn-secondary btn-sm active" role="button"
                                    aria-pressed="true">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>